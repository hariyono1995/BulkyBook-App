@{
    var status = Context.Request.Query["status"];
    var inprocess = "text-primary"; 
    var pending = "text-primary";
    var completed = "text-primary";
    var all = "text-primary"; 
    var approved = "text-primary";


    switch(status)
    {
        case "pending":
            pending = "active text-white";
            break;
        case "inprocess":
            inprocess = "active text-white";
            break;
        case "completed":
            completed = "active text-white";
            break;
        case "approved":
            approved = "active text-white";
            break;
       default :
        all = "active text-white";
        break;
    }
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="d-flex justify-content-between pt-4 pb-5">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class=" text-end">
            <ul class="list-group list-group-horizontal-sm">
                <a asp-controller="Order"
                   asp-area="Admin"
                   asp-action="Index"
                   asp-route-status="inprocess"
                   style="text-decoration:none">
                <li class="list-group-item @inprocess">In Process</li>
                </a> <a asp-controller="Order"
                    asp-area="Admin"
                    asp-action="Index"
                    asp-route-status="pending"
                    style="text-decoration:none">
                    <li class="list-group-item @pending">Payment Pending</li>
                </a>
                <a asp-controller="Order"
                   asp-area="Admin"
                   asp-action="Index"
                   asp-route-status="completed"
                   style="text-decoration:none">
                <li class="list-group-item @completed">Completed</li>
                </a>
                <a asp-controller="Order"
                   asp-area="Admin"
                   asp-action="Index"
                   asp-route-status="approved"
                   style="text-decoration:none">
                <li class="list-group-item @approved">Approved</li>
                </a>
                <a asp-controller="Order"
                    asp-area="Admin"
                    asp-action="Index"
                    asp-route-status="all"
                    style="text-decoration:none">
                    <li class="list-group-item @all">All</li>
                </a>
            </ul>
        </div>
    </div>


    <table id="tblData" class="table table-hover" style="width:100%">
        <thead>
            <tr class="table-light">
                <th>ID</th>
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Status</th>
                <th>Total</th>
                <th></th>

            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}

