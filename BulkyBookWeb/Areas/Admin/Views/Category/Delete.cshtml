@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <input style="display:none" asp-for="Id" />
        <div class="mt-2">
            @*<div asp-validation-summary="All"></div>*@
            <div class="my-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" disabled class="form-control" />
                @*<span asp-validation-for="Name" class="text-danger"></span>*@
            </div>
            <div class="my-2">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" disabled class="form-control" />
                @*<span asp-validation-for="DisplayOrder" class="text-danger"></span>*@
            </div>
            <div class="mt-4 mb-2">
                <a asp-controller="Category" asp-action="Index" class="btn btn-dark me-2" style="width:150px">Back to List</a>
                <button type="submit" asp-controller="Category" asp-action="Delete" class="btn btn-secondary" style="width:150px">Delete</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

