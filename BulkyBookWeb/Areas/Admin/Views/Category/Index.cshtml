@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />


<div class="container p-3">
    <div class="row py-4">
        <div class="col-6">
            <h2 class="text-primary">Category</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-square"></i> &nbsp; Add a new category</a>
        </div>
    </div>


    <table class="table table-hover">
        <thead>
            <tr class="table-dark">
                <th>Category Name</th>
                <th>Display Order</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr class="table-light">
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td class="flex justify-content-center">
                        <a asp-route-id="@obj.Id" asp-controller="Category" asp-action="Edit" class="btn btn-primary me-2"><i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                        <a asp-route-id="@obj.Id" asp-controller="Category" asp-action="Delete" class="btn btn-danger"><i class="bi bi-pencil-square"></i>&nbsp; Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

