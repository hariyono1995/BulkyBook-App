@model Category
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>

        <div class="mt-2">
            @*<div asp-validation-summary="All"></div>*@
            <div class="my-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="my-2">
                <label asp-for="DisplayOrder"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="mt-4 mb-2">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary me-2" style="width:150px">Back to List</a>
                <button type="submit" asp-controller="Category" asp-action="Create" class="btn btn-primary" style="width:150px">Create</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

