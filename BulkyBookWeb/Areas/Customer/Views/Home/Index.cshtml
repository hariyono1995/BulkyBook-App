@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div 
                    class="col-12 p-1" 
                    style="border:1px solid #008cba; 
                           border-radius:50x">
                    <div class="card">
                        <div style=" min-height:200px;max-height:350px">
                         <img 
                             src="@product.ImageUrl" 
                             class="card-img-top rounded"
                             style=" min-height:200px;max-height:350px" />
                        </div>
                         <div class="card-body">
                             <div class="pl-1">
                                 <p class="card-title h5 text-primary">@product.Title</p>
                                 <p class="card-title text-info">by <b>@product.Author</b></p>
                                 <div class="pl-1">
                                     <p>List Price: 
                                         <strike><b>@product.ListPrice.ToString("0.00")</b></strike>
                                      </p>
                                 </div>
                                 <div clasclass="pl-1">
                                    <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                                 </div>
                             </div>
                             <a 
                                 asp-action="Details"
                                 asp-route-productId=@product.Id
                                 class="btn btn-primary form-control">Details</a>
                         </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
